#! /usr/bin/python -tt
import PacketCaptureandDecode
import os
# Python module PacketCaptureandDecode is imported this module will be handle 
# the task for packet capturing and decoding of the packet
# and saperate the ip header and tcp header and payload part 
def idsStart():
# define a function idsStart() this function invoke the methode "CaptureandDecode" 
# that is define in the PacketCaptureandDecode module
	print 'IDS Starting'
# Calling CaptureandDecode()
	os.system('python PacketCaptureandDecode.py')
def main():
# main methode that will call the idsStart function
	idsStart()
# Calling idsStart function
if __name__=='__main__':
	main()
